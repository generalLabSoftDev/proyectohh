
<h2>Nueva Peticion</h2>

<%= form_for @form do |f| %>

      <% if @form.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@form.errors.count, "error") %> El cargo no se pudo crear debido a:
          </h2>
          <ul>
            <% @form.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

  

  <div class="panel panel-primary">

  <div class="panel-heading" align="center">Peticion</div>

  <div class="panel-body">

  <!-- Perfil content -->

     <div class="form-horizontal">

          <div class="form-group" align="center" >
            <label class="control-label col-md-12" > </label>
            <div class="col-md-12"> <%= f.text_area :descripcion %> </div>

          </div>

    
          <div class="form-group" align="center" >

          <label> <%= f.submit :Enviar %> </label>

          </div>

        

    </div>

</div>
</div>


  <% end %>


<%= link_to '<button class="btn btn-primary" > Atras </button>'.html_safe, forms_path %>
