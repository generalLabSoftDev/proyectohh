
  <h2>Perfil de Cargo:  <%= @charge.nombre %> </h2>
  <div><%= link_to '<button class="btn btn-primary" > Editar Cargo </button>'.html_safe, edit_charge_path(@charge) %>          <%= link_to '<button class="btn btn-danger" > Eliminar Cargo </button>'.html_safe, charge_path(@charge),
                                                                                  method: :delete,
                                                                                  data: { confirm: 'Esta a punto de eliminar el perfil y las competencias asociadas' } %>
                                                                                  </div>

<br>
<br>            
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Cliente</th>
        <th>Area</th>
        <th>Sede</th>
        <th>Idioma</th>
        <th>Tiempo</th>
        <th>Experiencia</th>
        <th>Educacion</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @charge.nombre %></td>
        <td><%= @charge.cliente %></td>
        <td><%= @charge.area %> </td>
        <td><%= @charge.sede %> </td>
        <td><%= @charge.idioma %></td>
        <td><%= @charge.time %></td>
        <td><%= @charge.anosexp %></td>
        <td><%= @charge.educacion %></td>
      </tr>
    </tbody>
  </table>


<h2>Competencias de <%= @charge.nombre %> </h2>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Descripcion</th>
        <th>Nivel</th>
        <th>tags</th>
      </tr>
    </thead>
    <tbody>
      <% @charge.competencies.each do |competency| %>
      <tr>
        <td><%= competency.descripcion%></td>
        <td><%= competency.nivel %></td>
        <td><%= competency.tag %> </td>

         <td>  <%= link_to 'Eliminar', [competency.charge, competency],
               method: :delete,
               data: { confirm: 'seguro?' } %> </td> 
         
      </tr>
      <% end %>
    </tbody>
  </table>



<%= render 'competencies/form' %>


